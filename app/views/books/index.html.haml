%h1 All Books

<hr/>
= link_to 'Add book', new_book_path
= link_to 'View all books', books_path
<hr />
= form_tag books_path, :method => :get, :id => 'genres_form' do
  = hidden_field_tag "title_sort", true if @title_header
  = hidden_field_tag ":publish_date_sort", true if @date_header

  Include:
  - @all_genres.each do |genre|
    = check_box_tag "genres[#{genre}]", 1, @selected_genres.include?(genre), :id => "ratings_#{genre}"
    = genre
  = submit_tag 'Selected only'
<hr/>
%table#books
  %thead
    %tr
      %th Id
      %th{:class => @title_header}= link_to 'Title', books_path(:sort => 'title', :genres => @selected_genres), :id => 'title_header'
      %th Genre
      %th ISBN
      %th{:class => @date_header}= link_to 'Publish Date', books_path(:sort => 'publish_date', :genres => @selected_genres), :id => 'publish_date_header'
      %th Details
      %th Edit
      %th Delete
  %tbody
    - @books.each do |book|
      %tr
        %td= book.id
        %td= book.title
        %td= book.genre
        %td= book.isbn_number
        %td= book.publish_date.strftime("%B %d, %Y")
        %td= link_to "Details", book_path(book)
        %td= link_to "Edit", edit_book_path(book)
        %td= link_to "Delete", book_path(book), :method => :delete
